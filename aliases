#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias -- -='cd -'  # escape dash with --

# Enable aliases to be sudoâ€™ed
alias sudu='sudo '

# Add verbose to all; prompt once for rm
alias mv='mv -v'
# alias rm='rm -I -v'
alias cp='cp -v'

# ls shortcuts
# TODO improve this
alias l='ls -Gl'
if [[ "$OSTYPE" == "darwin"* ]]; then
	alias ls='gls'
	alias ls='ls -G'
	alias ll='ls -l'
	alias la='gls -la --group-directories-first --color=auto'
else
	alias ls='ls --color=auto'
	alias ll='ls -l --group-directories-first'
	alias llt='ls -lt --group-directories-first' #sort by modification date
	alias la='ls -la --group-directories-first'
	alias l='ls --group-directories-first'
	alias llx='ls -lX' #sort by extension
fi

# Misc shortcuts
alias h=history
alias c=clear
alias cll='c;ll'
alias py=python3
alias py2=python2
alias py35=python3.5
alias t='tree --noreport --dirsfirst'
alias chrome='google-chrome-stable'
alias grep='grep -E --color=auto'
alias pip=pip3  #use pip3 by default; use pip2 for python2.x

#distraction-free writing 
alias wp='gnome-terminal --window-with-profile=writingbg & --maximize &
--hide-menubar gnome-terminal --window-with-profile=writing &
--geometry=100x75 --hide-menubar & exit'

# virtualenv/virtualenvwrapper:
if [[ -a /usr/local/bin/virtualenvwrapper.sh ]]; then
		alias v='workon'
		alias v.d='deactivate'
		alias v.mk='mkvirtualenv'
		alias v.rm='rmvirtualenv'
		alias v.cd='cdvirtualenv'
		alias v.ls='lsvirtualenv'
		alias v.sp='setvirtualenvproject'
fi
